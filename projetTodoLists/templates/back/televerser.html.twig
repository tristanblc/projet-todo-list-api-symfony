<!DOCTYPE html>
<title>Gestion d'une image</title>

{% block body %}

{% include 'base.html.twig'%}
{% include 'nav/navbar.html.twig'%}



{% block content %}
<br>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
    <div class="mb-4">
      {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
              {{ form_row(form.libelle, {'label': "LIbelle",'attr': {'class': 'shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3'}}) }}
      </div>
     
      
        <div class="form-group">
          {{ form_label(form.upload_file) }}
          {{ form_widget(form.upload_file) }}
          {{ form_errors(form.upload_file) }}
        </div>
        <div class="form-group">
        <br>
          {{ form_widget(form.send, {'label': "Téléverser", 'attr' : { 'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-5 rounded-full' }}) }}
        </div>
        {{ form_rest(form) }}
      {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
{% endblock %}
