{% extends 'base.html.twig' %}

{% block title %}Modifier son profil{% endblock %}

{% block body %}
{% include 'nav/navbar.html.twig'%}

    {{ form_start(form) }}

    <!-- component -->
<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
    <div class="mb-4">
       {{ form_row(form.email,{'attr': {'class': 'shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3'}}) }}
    </div>
    <div class="mb-6">
    {{ form_row(form.password,{'attr': {'class': 'shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3'}}) }}

    </div>
    <div class="flex items-center justify-between">
   <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-5 rounded-full" type="submit">
        S'inscrire
    </button>
    </div>
</div>



 {{ form_end(form) }}
 {{ form_rest(form) }}

{% endblock %}
